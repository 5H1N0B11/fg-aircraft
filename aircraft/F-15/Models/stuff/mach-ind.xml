<?xml version="1.0"?>

<PropertyList>

    <path>mach-ind.ac</path>

    <!-- Havind Standard Mach Loop meter-->
    <animation>
        <type>select</type>
        <object-name>mach-slow</object-name>
        <condition>
            <greater-than>
                <property>fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <or>
                <property>sim/model/f-14b/lights/master-test-lights</property>
                <and>
                    <greater-than-equals>
                        <property>velocities/mach</property>
                        <value>0.99</value>
                    </greater-than-equals>
                    <less-than-equals>
                        <property>velocities/mach</property>
                        <value>0.995</value>
                    </less-than-equals>
                </and>
            </or>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>mach-slow1</object-name>
        <condition>
            <greater-than>
                <property>fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <or>
                <property>sim/model/f-14b/lights/master-test-lights</property>
                <and>
                    <greater-than>
                        <property>velocities/mach</property>
                        <value>0.995</value>
                    </greater-than>
                <less-than>
                        <property>velocities/mach</property>
                        <value>1</value>
                    </less-than>
                </and>
            </or>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>mach-fast</object-name>
        <condition>
            <greater-than>
                <property>fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <or>
                <property>sim/model/f-14b/lights/master-test-lights</property>
                <and>
                    <less-than-equals>
                        <property>velocities/mach</property>
                        <value>0.995</value>
                    </less-than-equals>
                </and>
            </or>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>mach-optimum</object-name>
        <condition>
            <greater-than>
                <property>fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <or>
                <property>sim/model/f-14b/lights/master-test-lights</property>
                <and>
                    <greater-than-equals>
                        <property>velocities/mach</property>
                        <value>0.985</value>
                    </greater-than-equals>
                    <less-than-equals>
                        <property>velocities/mach</property>
                        <value>0.996</value>
                    </less-than-equals>
                </and>
            </or>
        </condition>
    </animation>




</PropertyList>
