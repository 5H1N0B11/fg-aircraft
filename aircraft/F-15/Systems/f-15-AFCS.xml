<PropertyList>

 <!-- =============================================================== -->
 <!-- Vertical Modes                                                  -->
 <!-- =============================================================== -->

	<filter>
		<name>ALTITUDE SYNC</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/autopilot/locks/altitude</property>
						<value>altitude-hold</value>
					</equals>
					<not-equals>
						<property>/controls/flight/elevator-norm</property>
						<value>0</value>
					</not-equals>
				</and>
			</condition>
		</enable>
		<input>
			<expression>
				<product>
					<floor>
						<div>
							<sum>
								<property>/instrumentation/altimeter/indicated-altitude-ft</property>
								<value>50</value>
							</sum>
							<value>100</value>
						</div>
					</floor>
					<value>100</value>
				</product>
			</expression>
		</input>
		<output>/autopilot/settings/target-altitude-ft</output>
		<min>0</min>
		<max>100000</max>
	</filter>

	<filter>
		<name>ALTITUDE CAPTURE/HOLD</name>
		<debug>false</debug>
		<type>gain</type>
		<input>
			<expression>
				<sum>
					<property>/autopilot/internal/altitude-2-sec-ahead</property>
					<value>-5</value>
				</sum>
			</expression>
		</input>
		<reference>
			<property>/autopilot/settings/target-altitude-ft</property>
		</reference>
		<gain>-6</gain>
		<output>
			<property>/autopilot/internal/target-fpm-alt</property>
		</output>
		<min>-2000</min>
		<max>2000</max>
	</filter>

	<filter>
		<name>IT-CONTROLLER: FPM KP (P Gain)</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<expression>
				<table>
					<property>/velocities/mach</property>
					<entry><ind>0.2</ind><dep>0.0023</dep></entry>
					<entry><ind>1.4</ind><dep>0.0008</dep></entry>
				</table>
			</expression>
		</input>
		<output>/autopilot/internal/vs-kp</output>
	</filter>
 
	<pid-controller>
		<name>FPM HOLD</name>
		<debug>false</debug>
		<enable>
			<condition>
				<and>
					<or>
						<equals>
							<property>/autopilot/locks/altitude</property>
							<value>vertical-speed-hold</value>
						</equals>
						<equals>
							<property>/autopilot/locks/altitude</property>
							<value>altitude-hold</value>
						</equals>
					</or>
					<equals>
						<property>/controls/flight/elevator-norm</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>
			<property>/autopilot/internal/vert-speed-fpm</property>
		</input>
		<reference>
			<condition>
				<equals>
					<property>/autopilot/locks/altitude</property>
					<value>vertical-speed-hold</value>
				</equals>
			</condition>
			<property>/autopilot/settings/vertical-speed-fpm</property>
		</reference>
		<reference>
			<condition>
				<equals>
					<property>/autopilot/locks/altitude</property>
					<value>altitude-hold</value>
				</equals>
			</condition>
			<property>/autopilot/internal/target-fpm-alt</property>
		</reference>
		<output>
			<property>/autopilot/internal/target-pitch-deg</property>
		</output>
		<config>
			<Kp>
				<property>/autopilot/internal/vs-kp</property>
			</Kp>
			<Ti>2.0</Ti>
			<Td>0.0001</Td>
			<u_min>
				<condition>
					<and>
						<equals>
							<property>gear/gear[1]/wow</property>
							<value>0</value>
						</equals>
						<equals>
							<property>gear/gear[2]/wow</property>
							<value>0</value>
						</equals>
					</and>
				</condition>
				<value>-15</value>
			</u_min>
			<u_min>
				<condition>
					<or>
						<equals>
							<property>gear/gear[1]/wow</property>
							<value>1</value>
						</equals>
						<equals>
							<property>gear/gear[2]/wow</property>
							<value>1</value>
						</equals>
					</or>
				</condition>
				<value>0</value>
			</u_min>
			<u_max>
				<condition>
					<and>
						<equals>
							<property>gear/gear[1]/wow</property>
							<value>0</value>
						</equals>
						<equals>
							<property>gear/gear[2]/wow</property>
							<value>0</value>
						</equals>
					</and>
				</condition>
				<value>30</value>
			</u_max>
			<u_max>
				<condition>
					<or>
						<equals>
							<property>gear/gear[1]/wow</property>
							<value>1</value>
						</equals>
						<equals>
							<property>gear/gear[2]/wow</property>
							<value>1</value>
						</equals>
					</or>
				</condition>
				<value>10</value>
			</u_max>
		</config>
	</pid-controller>
	
	<filter>
		<name>PITCH DEG SYNC 2</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<or>
					<and>
						<not-equals>
							<property>/autopilot/locks/altitude</property>
							<value>vertical-speed-hold</value>
						</not-equals>
						<not-equals>
							<property>/autopilot/locks/altitude</property>
							<value>altitude-hold</value>
						</not-equals>
					</and>
					<not-equals>
						<property>/controls/flight/elevator-norm</property>
						<value>0</value>
					</not-equals>
				</or>
			</condition>
		</enable>
		<input>/orientation/pitch-deg</input>
		<output>/autopilot/internal/target-pitch-deg</output>
		<min>-30</min>
		<max>45</max>
	</filter>
	
	<filter>
		<name>IT-CONTROLLER: TARGET PITCH CMD</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<condition>
				<equals>
					<property>/autopilot/locks/altitude</property>
					<value>pitch-hold</value>
				</equals>
			</condition>
			<property>/orientation/pitch-deg</property>
		</input>
		<input>/autopilot/internal/target-pitch-deg</input>
		<output>/autopilot/internal/target-pitch</output>   	
	</filter>

	<filter>
		<name>System Command: Pitch Rate</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>-0.9</gain>
		<enable>
			<condition>
				<or>
					<equals>
						<property>/autopilot/locks/altitude</property>
						<value>pitch-hold</value>
					</equals>
					<equals>
						<property>/autopilot/locks/altitude</property>
						<value>vertical-speed-hold</value>
					</equals>
					<equals>
						<property>/autopilot/locks/altitude</property>
						<value>altitude-hold</value>
					</equals>
				</or>
			</condition>
		</enable>
		<input>
			<property>/orientation/pitch-deg</property>
		</input>
		<reference>
			<property>/autopilot/internal/target-pitch</property>
		</reference>
		<output>
			<property>/autopilot/internal/pitch-rate</property>
		</output>   	
		<min>-4.8</min>
		<max>4.8</max>
	</filter>
	
	<filter>
		<name>IT-CONTROLLER: PITCH RATE KP (P Gain)</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<expression>
				<table>
					<property>/velocities/mach</property>
					<entry><ind>0.2</ind><dep>-0.101</dep></entry>
					<entry><ind>1.0</ind><dep>-0.021</dep></entry>
					<entry><ind>2.1</ind><dep>-0.005</dep></entry>
				</table>
			</expression>
		</input>
		<output>/autopilot/internal/kp-pitch</output>
	</filter>
	
	<pid-controller>
		<name>IT-CONTROLLER: PITCH</name>
		<debug>false</debug>
		<enable>
			<condition>
				<and>
					<or>
						<equals>
							<property>/autopilot/locks/altitude</property>
							<value>pitch-hold</value>
						</equals>
						<equals>
							<property>/autopilot/locks/altitude</property>
							<value>vertical-speed-hold</value>
						</equals>
						<equals>
							<property>/autopilot/locks/altitude</property>
							<value>altitude-hold</value>
						</equals>
					</or>
					<equals>
						<property>/controls/flight/elevator-norm</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>
			<property>/orientation/pitch-rate-degps</property>
		</input>
		<reference>
			<property>/autopilot/internal/pitch-rate</property>
		</reference>
		<output>
			<property>/fdm/jsbsim/systems/afcs/elevator-cmd-pid</property>
		</output>
		<config>
			<Kp>
				<property>/autopilot/internal/kp-pitch</property>
			</Kp>
			<beta>1</beta>
			<alpha>0.1</alpha>
			<gamma>0</gamma>
			<Ti>0.35</Ti>
			<Td>0.0002</Td>
			<u_min>-0.6</u_min>
			<u_max>0.6</u_max>
		</config>
	</pid-controller>
	
	<filter>
		<name>IT-CONTROLLER: PITCH DEAD</name>
		<type>gain</type>
		<enable>
			<condition>
				<and>
					<not-equals>
						<property>/autopilot/locks/altitude</property>
						<value>pitch-hold</value>
					</not-equals>
                    <not-equals>
						<property>/autopilot/locks/altitude</property>
						<value>vertical-speed-hold</value>
					</not-equals>
					<not-equals>
						<property>/autopilot/locks/altitude</property>
						<value>altitude-hold</value>
					</not-equals>
				</and>
			</condition>
		</enable>
		<gain>1.0</gain>
		<input>0</input>
		<output>/fdm/jsbsim/systems/afcs/elevator-cmd-pid</output>
	</filter>
	
	<filter>
		<name>IT-CONTROLLER: ELEVATOR INVERT</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<condition>
				<and>
					<less-than-equals>
						<property>/orientation/roll-deg</property>
						<value>90</value>
					</less-than-equals>
					<greater-than-equals>
						<property>/orientation/roll-deg</property>
						<value>-90</value>
					</greater-than-equals>
				</and>
			</condition>
			<property>/fdm/jsbsim/systems/afcs/elevator-cmd-pid</property>
		</input>
		<input>
			<property>/fdm/jsbsim/systems/afcs/elevator-cmd-pid</property>
			<scale>-1.0</scale>
		</input>
		<output>/fdm/jsbsim/systems/afcs/elevator-cmd-delta</output>
	</filter>

</PropertyList>
