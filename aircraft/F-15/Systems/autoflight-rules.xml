<PropertyList>
	
	<!-- No way to move these to JSB -->
	<logic>
		<input>
			<or>
				<equals>
					<property>/autopilot/locks/heading</property>
					<value>wing-leveler</value>
				</equals>
				<equals>
					<property>/autopilot/locks/heading</property>
					<value>dg-heading-hold</value>
				</equals>
				<equals>
					<property>/autopilot/locks/heading</property>
					<value>true-heading-hold</value>
				</equals>
			</or>
		</input>
		<output>/fdm/jsbsim/autoflight/input/roll-switch</output>
	</logic>
	
	<logic>
		<input>
			<or>
				<equals>
					<property>/autopilot/locks/heading</property>
					<value>dg-heading-hold</value>
				</equals>
				<equals>
					<property>/autopilot/locks/heading</property>
					<value>true-heading-hold</value>
				</equals>
			</or>
		</input>
		<output>/fdm/jsbsim/autoflight/input/hdg-active</output>
	</logic>
	
	<logic>
		<input>
			<or>
				<equals>
					<property>/autopilot/locks/altitude</property>
					<value>pitch-hold</value>
				</equals>
				<equals>
					<property>/autopilot/locks/altitude</property>
					<value>vertical-speed-hold</value>
				</equals>
				<equals>
					<property>/autopilot/locks/altitude</property>
					<value>altitude-hold</value>
				</equals>
			</or>
		</input>
		<output>/fdm/jsbsim/autoflight/input/pitch-switch</output>
	</logic>
	
	<filter>
		<name>HEADING MAGNETIC SYNC</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/autopilot/locks/heading</property>
						<value>dg-heading-hold</value>
					</equals>
					<not-equals>
						<property>/fdm/jsbsim/autoflight/output/roll-master</property>
						<value>1</value>
					</not-equals>
				</and>
			</condition>
		</enable>
		<input>
			<expression>
				<floor>
					<sum>
						<property>/orientation/heading-magnetic-deg</property>
						<value>0.5</value> <!-- Make it rounded correctly -->
					</sum>
				</floor>
			</expression>
		</input>
		<output>/autopilot/settings/heading-bug-deg</output>
	</filter>
	
	<filter>
		<name>HEADING TRUE SYNC</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/autopilot/locks/heading</property>
						<value>true-heading-hold</value>
					</equals>
					<not-equals>
						<property>/fdm/jsbsim/autoflight/output/roll-master</property>
						<value>1</value>
					</not-equals>
				</and>
			</condition>
		</enable>
		<input>
			<expression>
				<floor>
					<sum>
						<property>/orientation/heading-deg</property>
						<value>0.5</value> <!-- Make it rounded correctly -->
					</sum>
				</floor>
			</expression>
		</input>
		<output>/autopilot/settings/true-heading-deg</output>
	</filter>
	
	<filter>
		<name>DRIFT ANGLE</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>/orientation/track-magnetic-deg</input>
		<reference>/orientation/heading-magnetic-deg</reference>
		<output>/fdm/jsbsim/autoflight/roll/drift-angle</output>
		<period>
			<min>-180</min>
			<max>180</max>
		</period>
	</filter>
	
	<filter>
		<name>HEADING ERROR DEG</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<condition>
				<and>
					<equals>
						<property>/autopilot/locks/heading</property>
						<value>true-heading-hold</value>
					</equals>
					<equals>
						<property>/autopilot/settings/gps-driving-true-heading</property>
						<value>1</value>
					</equals>
				</and>
			</condition>
			<expression>
				<sum>
					<property>/autopilot/route-manager/wp[0]/true-bearing-deg</property>
					<product>
						<property>/fdm/jsbsim/autoflight/roll/drift-angle</property>
						<value>-1</value>
					</product>
					<product>
						<property>/orientation/heading-deg</property>
						<value>-1</value>
					</product>
				</sum>
			</expression>
		</input>
		<input>
			<condition>
				<and>
					<equals>
						<property>/autopilot/locks/heading</property>
						<value>true-heading-hold</value>
					</equals>
					<not-equals>
						<property>/autopilot/settings/gps-driving-true-heading</property>
						<value>1</value>
					</not-equals>
				</and>
			</condition>
			<property>/autopilot/settings/true-heading-deg</property>
			<offset>
				<property>/orientation/heading-deg</property>
				<scale>-1.0</scale>
			</offset>
		</input>
		<input>
			<property>/autopilot/settings/heading-bug-deg</property>
			<offset>
				<property>/orientation/heading-magnetic-deg</property>
				<scale>-1.0</scale>
			</offset>
		</input>
		<output>/fdm/jsbsim/autoflight/roll/heading-error-deg</output>
		<period>
			<min>-180</min>
			<max>180</max>
		</period>
	</filter>
	
	<predict-simple>
		<name>ALTITUDE 2 SECONDS AHEAD</name>
		<debug>false</debug>
		<input>/instrumentation/altimeter/indicated-altitude-ft</input>
		<output>/fdm/jsbsim/autoflight/pitch/altitude-2-sec-ahead</output>
		<seconds>5.0</seconds>
		<filter-gain>0.0</filter-gain>
	</predict-simple>
	

 <!-- =============================================================== -->
 <!-- Velocity Modes                                                  -->
 <!-- =============================================================== -->

	<pid-controller>
		<name>Autothrottle knots</name>
		<debug>false</debug>
		<enable>
			<condition>
				<not>
					<or>
						<property>/gear/gear[0]/wow</property>
						<property>/gear/gear[1]/wow</property>
						<property>/gear/gear[2]/wow</property>
					</or>
				</not>
				<not>
					<equals>
						<property>/autopilot/locks/autothrottle-permit-augmentation</property>
						<value>1</value>
					</equals>
				</not>
				<equals>
					<property>autopilot/locks/speed</property>
					<value>speed-with-throttle</value>
				</equals>
				<greater-than>
					<property>/autopilot/settings/target-speed-kt</property>
					<value>3</value>
				</greater-than>
			</condition>
		</enable>
		<input>
			<prop>/instrumentation/airspeed-indicator/indicated-speed-kt</prop>
		</input>
		<reference>
			<prop>/autopilot/settings/target-speed-kt</prop>
		</reference>
		<output>
			<property>/controls/engines/engine[0]/throttle</property>
			<property>/controls/engines/engine[1]/throttle</property>
		</output>
		<config>
			<Kp>0.1</Kp>
			<beta>1.0</beta>
			<alpha>0.1</alpha>
			<gamma>0.0</gamma>
			<Ti>10.0</Ti>
			<Td>0.00001</Td>
			<u_min>0.081</u_min>
			<u_max>0.917</u_max>
			<!-- No afterburner while A/T is on -->
		</config>
	</pid-controller>

