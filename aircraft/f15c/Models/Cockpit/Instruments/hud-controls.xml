<?xml version="1.0"?>


<PropertyList>

	<path>hud-controls.ac</path>

    <effect>
        <inherits-from>Effects/model-transparent</inherits-from>
        <object-name>HUDImage1</object-name>
        <object-name>HUDImage2</object-name>
        <object-name>HUDGlass1</object-name>
        <object-name>HUDGlass2</object-name>
    </effect>


    <animation>
        <type>select</type>
        <object-name>master-caution-on</object-name>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <or>
                <property>sim/model/f15/lights/master-test-lights</property>
                <property>sim/model/f15/instrumentation/warnings/master-caution</property>
            </or>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>sam-light-on</object-name>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <or>
                <property>sim/model/f15/lights/master-test-lights</property>
                <property>sim/model/f15/instrumentation/warnings/ac-sam</property>
            </or>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>ai-light-on</object-name>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <or>
                <property>sim/model/f15/lights/master-test-lights</property>
                <property>sim/model/f15/instrumentation/warnings/ca-ai</property>
            </or>
        </condition>
    </animation>


    <!-- Master Caution Button -->
    <animation>
        <type>pick</type>
        <visible>true</visible>
        <object-name>master-caution-on</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <interval-sec>0.1</interval-sec>
            <binding>
                <command>nasal</command>
                <script>aircraft.master_caution_pressed()</script>
            </binding>
        </action>
    </animation>

    <!-- lighting -->
    <animation>
        <object-name>mount</object-name>
        <type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
            <factor-prop>controls/lighting/panel-norm</factor-prop>
            <red>  1.000</red>
            <green>0.576</green>
            <blue> 0.161</blue>
            <red-prop>controls/lighting/panel-red</red-prop>
            <green-prop>controls/lighting/panel-green</green-prop>
            <blue-prop>controls/lighting/panel-blue</blue-prop>

        </emission>
    </animation>

    <animation>
        <object-name>instrument</object-name>
        <type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
            <factor-prop>controls/lighting/flt-inst</factor-prop>
            <red>  0.1000</red>
            <green>0.0576</green>
            <blue> 0.0161</blue>
            <red-prop>controls/lighting/instrument-red</red-prop>
            <green-prop>controls/lighting/instrument-green</green-prop>
            <blue-prop>controls/lighting/instrument-blue</blue-prop>
        </emission>
    </animation>

    <!-- *** LoD *** -->
	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>135</max-m>
	</animation>

</PropertyList>
