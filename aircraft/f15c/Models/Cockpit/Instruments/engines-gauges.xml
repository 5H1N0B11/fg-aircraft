	<!-- temp -->
	<animation>
		<name>temp-l</name>
		<type>rotate</type>
		<object-name>needle-temp-l</object-name>
		<property>engines/engine[0]/egt-norm</property>
        <factor>235</factor>
		<center>
            <x-m> 0.0059</x-m>
            <y-m>-0.0478</y-m>
            <z-m>-0.0055</z-m>
        </center>
		<axis><x>-1</x></axis>
	</animation>

	<animation>
		<name>temp-r</name>
		<type>rotate</type>
		<object-name>needle-temp-r</object-name>
		<property>engines/engine[1]/egt-norm</property>
        <factor>235</factor>
		<center>
            <x-m> 0.0059</x-m>
            <y-m> 0.0068</y-m>
            <z-m>-0.0055</z-m>
        </center>
		<axis><x>-1</x></axis>
	</animation>

	<!-- fan percent -->
	<animation>
		<name>fan-percent-l</name>
		<type>rotate</type>
		<object-name>needle-fan-l</object-name>
		<property>engines/engine[0]/n1</property>
        <factor>2.25</factor>
        <center>
            <x-m> 0.0059</x-m>
            <y-m>-0.0470</y-m>
            <z-m> 0.0522</z-m>
        </center>
		<axis><x>-1</x></axis>
	</animation>

	<animation>
		<name>fan-percent-r</name>
		<type>rotate</type>
		<object-name>needle-fan-r</object-name>
        <property>engines/engine[1]/n1</property>
        <factor>2.25</factor>
		<center>
            <x-m> 0.0059</x-m>
            <y-m> 0.0066</y-m>
            <z-m> 0.0522</z-m>
        </center>
		<axis><x>-1</x></axis>
	</animation>
	
	<!-- fuel flow -->
	<animation>
		<name>fuel-flow-ppm-l</name>
		<type>rotate</type>
		<object-name>needle-fuel-l</object-name>
		<property>engines/engine[0]/fuel-flow_pph</property>
		<interpolation>
			<entry><ind>0</ind><dep>0</dep></entry>
			<entry><ind>100000</ind><dep>235</dep></entry>
		</interpolation>
		<center>
            <x-m> 0.0062</x-m>
            <y-m>-0.0781</y-m>
            <z-m>-0.0672</z-m>
        </center>
		<axis><x>-1</x></axis>
	</animation>

	<animation>
		<name>fuel-flow-ppm-r</name>
		<type>rotate</type>
		<object-name>needle-fuel-r</object-name>
		<property>engines/engine[1]/fuel-flow_pph</property>
		<interpolation>
            <entry>
                <ind>0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>100000</ind>
                <dep>235</dep>
            </entry>
        </interpolation>
		<center>
            <x-m> 0.0062</x-m>
            <y-m>-0.0237</y-m>
            <z-m>-0.0670</z-m>
        </center>
		<axis><x>-1</x></axis>
	</animation>




	<!-- oil pressure -->
	<animation>
		<name>oil-pressure-psi-l</name>
		<type>rotate</type>
		<object-name>needle-oil-l</object-name>
		<property>engines/engine[0]/oil-pressure-psi</property>
		<interpolation>
			<entry><ind>0.0000</ind><dep>0</dep></entry>
			<entry><ind>100</ind><dep>320</dep></entry>
		</interpolation>
		<center>
            <x-m> 0.0059</x-m>
            <y-m> 0.0538</y-m>
            <z-m>-0.0044</z-m>
        </center>
		<axis><x>-1</x></axis>
	</animation>

	<animation>
		<name>oil-pressure-psi-r</name>
		<type>rotate</type>
		<object-name>needle-oil-r</object-name>
        <property>engines/engine[1]/oil-pressure-psi</property>
        <interpolation>
            <entry>
                <ind>0.0000</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>100</ind>
                <dep>320</dep>
            </entry>
        </interpolation>
        <center>
            <x-m> 0.0059</x-m>
            <y-m> 0.0826</y-m>
            <z-m>-0.0044</z-m>
        </center>
        <axis>
		<x>-1</x></axis>
	</animation>



	<animation>
		<name>nozl-l</name>
		<type>rotate</type>
		<object-name>needle-nozl-l</object-name>
		<property>engines/engine[0]/nozzle-pos-norm</property>
        <factor>235</factor>
        <center>
            <x-m> 0.0098</x-m>
            <y-m>-0.0780</y-m>
            <z-m>-0.1269</z-m>
        </center>
		<axis><x>-1</x></axis>
	</animation>

	<animation>
		<name>nozl-r</name>
		<type>rotate</type>
		<object-name>needle-nozl-r</object-name>
		<property>engines/engine[1]/nozzle-pos-norm</property>
        <factor>235</factor>
		<center>
            <x-m> 0.0098</x-m>
            <y-m>-0.0273</y-m>
            <z-m>-0.1275</z-m>
        </center>
		<axis><x>-1</x></axis>
	</animation>

    <animation>
