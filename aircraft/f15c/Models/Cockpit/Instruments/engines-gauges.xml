    <animation>
        <name>hyd-3</name>
        <type>rotate</type>
        <object-name>needle-hyd-3</object-name>
        <property>fdm/jsbsim/systems/hydraulics/combined-system-psi</property>
        <interpolation>
            <entry>
                <ind>0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>4000</ind>
                <dep>310</dep>
            </entry>
        </interpolation>
        <center>
            <x-m> 0.0012</x-m>
            <y-m> 0.0712</y-m>
            <z-m> 0.0370</z-m>
        </center>
        <axis>
            <x>-1</x>
        </axis>
    </animation>
    <!-- lighting -->


	<animation>
		<object-name>face</object-name>
		<type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>sim/rendering/rembrandt/enabled</property>
            </not>
            <not>
                <property>sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
			<factor-prop>controls/lighting/instruments-norm</factor-prop>
			<red>0.50</red>
			<green>0.25</green>
			<blue>0.14</blue>
		</emission>
	</animation>

	<animation>
        <object-name>needles</object-name>
        <object-name>faces</object-name>
        <type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
			<factor-prop>controls/lighting/eng-inst</factor-prop>
            <red>0.055</red>
            <green>0.024</green>
            <blue>0.010</blue>
        </emission>
	</animation>

    <animation>
        <object-name>mount</object-name>
        <type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
            <factor-prop>controls/lighting/panel-norm</factor-prop>
            <red>0.55</red>
            <green>0.24</green>
            <blue>0.10</blue>
        </emission>
    </animation>


    <!-- *** LoD *** -->
	<animation> 
		<type>range</type>
		<min-m>0</min-m>
		<max-m>5</max-m>
	</animation>

</PropertyList>
