<?xml version="1.0"?>

<PropertyList>

	<name>aoa-gauge</name>
	<path>aoa-gauge.ac</path>

    <!--<animation>
        <type>scale</type>
        <x-offset>0.6</x-offset>
        <y-offset>0.6</y-offset>
        <z-offset>0.6</z-offset>
    </animation>-->
    <animation>
		<type>rotate</type>
		<object-name>needle</object-name>
		<property>orientation/alpha-indicated-deg</property>
        <condition>
                <greater-than>
                    <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                    <value>0</value>
                </greater-than>
        </condition>
		<interpolation>
		<!--        AoA deg           gauge deg -->
		<entry><ind>  0</ind><dep>  0</dep></entry>
		<entry><ind> 40</ind><dep>   -302</dep></entry> 
		<entry><ind> 50</ind><dep>   -334</dep></entry> 

		</interpolation>
	<axis><x>-1</x></axis>
 </animation>

    <animation>
        <type>select</type>
        <object-name>off-flag</object-name>
        <condition>
            <not>
                <greater-than>
                    <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                    <value>0</value>
                </greater-than>
            </not>
        </condition>
    </animation>

    <!-- lighting -->
    <animation>
        <object-name>mount</object-name>
        <type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
            <factor-prop>controls/lighting/panel-norm</factor-prop>
            <red>  1.000</red>
            <green>0.576</green>
            <blue> 0.161</blue>
            <red-prop>controls/lighting/panel-red</red-prop>
            <green-prop>controls/lighting/panel-green</green-prop>
            <blue-prop>controls/lighting/panel-blue</blue-prop>

        </emission>
    </animation>

    <animation>
        <object-name>instrument</object-name>
        <type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
            <factor-prop>controls/lighting/flt-inst</factor-prop>
            <red>  0.1000</red>
            <green>0.0576</green>
            <blue> 0.0161</blue>
            <red-prop>controls/lighting/instrument-red</red-prop>
            <green-prop>controls/lighting/instrument-green</green-prop>
            <blue-prop>controls/lighting/instrument-blue</blue-prop>
        </emission>
    </animation>


    <!-- *** LoD *** -->
    <animation>
        <type>range</type>
        <min-m>0</min-m>
        <max-m>35</max-m>
    </animation>

</PropertyList>
