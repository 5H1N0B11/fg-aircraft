	<!-- fuselage and feed tanks -->


    <!-- Bingo Knob -->
    
    <animation>
        <name>bingo-knob-left-coarse</name>
        <type>pick</type>
        <visible>false</visible>
        <object-name>bingo-knob-left</object-name>
        <action>
