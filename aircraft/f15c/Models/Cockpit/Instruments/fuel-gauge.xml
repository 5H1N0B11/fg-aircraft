    <!-- Bingo Knob -->
    
    <animation>
        <name>bingo-knob-left-coarse</name>
        <type>pick</type>
        <visible>false</visible>
        <object-name>bingo-knob-left</object-name>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
            <interval-sec>0.2</interval-sec>
            <binding>
                <command>property-adjust</command>
                <property>sim/model/f15/controls/fuel/bingo</property>
                <step>-500</step>
                <min>0</min>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>
    <animation>
        <name>bingo-knob-right-coarse</name>
        <type>pick</type>
        <visible>true</visible>
        <object-name>bingo-knob-right</object-name>
