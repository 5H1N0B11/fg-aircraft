<PropertyList>
	
	<predict-simple>
		<name>Alpha Predict</name>
		<debug>false</debug>
		<input>/fdm/jsbsim/aero/alpha-indicated-deg</input>
		<output>/fdm/jsbsim/aero/alpha-indicated-deg-ahead</output>
		<seconds>1.0</seconds>
		<filter-gain>0.0</filter-gain>
	</predict-simple>
	
	<pid-controller>
		<name>APC Alpha Hold</name>
		<debug>false</debug>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/fdm/jsbsim/systems/apc/active</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/fdm/jsbsim/position/aircraft-on-ground</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>/fdm/jsbsim/aero/alpha-indicated-deg-ahead</input>
		<reference>14.7</reference>
		<output>/controls/engines/engine[0]/throttle</output>
		<output>/controls/engines/engine[1]/throttle</output>
		<config>
			<Kp>-0.15</Kp>
			<Ti>2.5</Ti>
			<Td>0.00001</Td>
			<u_min>0.0</u_min>
			<u_max>0.89</u_max>
		</config>
	</pid-controller>

</PropertyList>
